{
  "name": "searchsocket",
  "version": "0.2.1",
  "description": "Semantic site search and MCP retrieval for SvelteKit static sites",
  "license": "MIT",
  "author": "Greg Priday <greg@siteorigin.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregpriday/searchsocket.git"
  },
  "homepage": "https://github.com/gregpriday/searchsocket",
  "bugs": {
    "url": "https://github.com/gregpriday/searchsocket/issues"
  },
  "keywords": [
    "search",
    "semantic-search",
    "sveltekit",
    "mcp",
    "embeddings",
    "vector-search",
    "site-search",
    "static-site"
  ],
  "type": "module",
  "files": [
    "dist",
    "!dist/**/*.map",
    "README.md"
  ],
  "bin": {
    "searchsocket": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./sveltekit": {
      "types": "./dist/sveltekit.d.ts",
      "import": "./dist/sveltekit.js",
      "require": "./dist/sveltekit.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.29.2",
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "cheerio": "^1.2.0",
    "chokidar": "^5.0.0",
    "commander": "^14.0.3",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "jiti": "^2.6.1",
    "p-limit": "^7.3.0",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.2",
    "@types/turndown": "^5.0.6",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
